<h2 align="center"><%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center description"><strong>Description: </strong></h4>
	<%= simple_format(@article.description)%>
	<div class="article-actions">
		<%= link_to "Edit", edit_article_path(@article), class: "btn btn-success btn-xs"%>
		<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-danger btn-xs"%>
		<%= link_to "Index", articles_path(@article), class: "btn btn-primary btn-xs"%>
	</div>
</div>